#:kivy 2.3.0

<Label> :
    color: 0 , 0 , 0 , 1
    size_hint: (0.2 , 0.045)

<TextInput> :
    size_hint : 0.2 , 0.045
    multiline: False

<LoginScreen>:
    canvas.before:
        Color:
            rgba : 1 , 1 , 1 , 1
        Rectangle : 
            size : self.width , self.height
        Color:
            rgba: 0.85 , 0.85 , 0.95 , 1
        RoundedRectangle: 
            size : self.width/2 , self.height/2
            pos : self.width/4 , self.height/4 - self.height/8
            radius: [(20 ,20) , (20 , 20) , (20 , 20) , (20 , 20)]

    FloatLayout:
        cols : 2
        size : root.size
        
        Image:
            source: '../assets/logo/safehaven_logo.png'
            size_hint : 0.3 , 0.3
            pos_hint: {"x" : 0.35 , "y" : 0.7}

        Label :
            pos_hint: {"x" : 0.25 , "y" : 0.45}
            text : 'First Name'
        
        TextInput :
            pos_hint: {"x" : 0.5 , "y" : 0.45}

        Label :
            pos_hint: {"x" : 0.25 , "y" : 0.4}
            text : 'Last Name'
        
        TextInput:
            pos_hint: {"x" : 0.5 , "y" : 0.4}