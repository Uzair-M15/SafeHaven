#:kivy 2.3.0
#:import Window kivy.core.window.Window
#:include custom/RoundedButton.kv

<Label> :
    color: 0 , 0 , 0 , 1
    size_hint: (0.2 , 0.045)


<TextInput> :
    size_hint : 0.2 , 0.045
    multiline: False


<LoginScreen>:
    
    
    firstName : edtFirstName
    lastName : edtLastName
    screen_widget : screen_widget

    canvas.before:
        Color:
            rgba : 0.9 , 0.9 , 0.9 , 1
        Rectangle : 
            size : self.width , self.height
        
        Color:
            rgba: 66/255, 161/255, 245/255 , 1
        RoundedRectangle: 
            size : self.width/2 , self.height/2
            pos : self.width/4 - self.width/48 , self.height/4 - self.height/8 - self.height/48
            radius: [(20 ,20) , (20 , 20) , (20 , 20) , (20 , 20)]

        Color:
            rgba: 1 , 1 , 1 , 1
        RoundedRectangle: 
            size : self.width/2 , self.height/2
            pos : self.width/4 , self.height/4 - self.height/8
            radius: [(20 ,20) , (20 , 20) , (20 , 20) , (20 , 20)]

    Widget:
        id : screen_widget
        pos : 0 , 0
        size_hint : 1 , 1
        canvas :
            Color :
                rgba : 1 , 0 , 0 , 0.01
            Rectangle:
                size : self.size
                pos : self.pos

    FloatLayout:
        cols : 2
        size : root.size
        
        Image:
            source: '../assets/logo/safehaven_logo.png'
            size_hint : 0.3 , 0.3
            pos_hint: {"x" : 0.35 , "y" : 0.7}

        Label :
            id : lblFirstName
            pos_hint: {"x" : 0.3 , "y" : 0.45}
            text : 'First Name'
            font_size: self.height/10 if screen_widget.width>screen_widget.height else self.width/10
        
        TextInput :
            id : edtFirstName
            pos_hint: {"x" : 0.45 , "y" : 0.45}

        Label :
            id : lblLastName
            pos_hint: {"x" : 0.3 , "y" : 0.39}
            text : 'Last Name'
            font_size: self.height/10 if screen_widget.width>screen_widget.height else self.width/10
        
        TextInput:
            id : edtLastName
            pos_hint: {"x" : 0.45 , "y" : 0.39}
        
        Label : 
            id : lblPassword
            pos_hint: {"x" : 0.3 , "y" : 0.33}
            text : 'Password'
            font_size: self.height/10 if screen_widget.width>screen_widget.height else self.width/10
        
        TextInput :
            id : edtPassword
            pos_hint: {"x" : 0.45 , "y" : 0.33}
        
        RoundedButton:
            size_hint: (0.2 , 0.045)
            text : 'Submit'
            pos_hint: {"x" : 0.4, "y" : 0.21}